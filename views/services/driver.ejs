<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Diver</title>
    <link rel="stylesheet" href="stylesheets/style.css">
    <style>
        body{
            background: #f5f5f5 url('images/manwithcar.png') no-repeat left center;
            background-size: 500px 500px;
        }
        h1{
            padding: 3px;
        }
        form{
            margin-top: 1%;
        }
        label{
            width: 200px;
            font-size: 20px;
        }
        .sub{
            padding: 10px;
            width: 120px;
            font-size: 13px;
            margin-left: 5%; 
        }
        .textbox{
            padding: 3px 26px;
            margin: 2px 0;
        }
    </style>
</head>
<body>
    <h1>New Driver Form</h1>
    <form action="" onsubmit="return validate()">
        <label>First Name :</label>
        <input type="text" name="fname" class="textbox" placeholder="Enter First name" required><br><br>

        <label>Last Name :</label>
        <input type="text" name="lname" class="textbox" placeholder="Enter Last name" required><br><br>

        <label>City :</label>
        <input type="text" name="city" class="textbox" placeholder="Enter city name" required><br><br>

        <label>State :</label>
        <select name="states" class="textbox">
            <option value="karnataka">Karnataka</option>
            <option value="Maharastra">Maharastra</option>
            <option value="up">UP</option>
            <option value="punjab">Punjab</option>
        </select><br><br>

        <label>Address :</label>
        <textarea name="Address" rows="3" cols="20" class="textbox" placeholder="Enter your Address..." required></textarea><br><br>

        <label>Mobile Number :</label>
        <input type="tel" name="no" id="num" maxlength="10" class="textbox" placeholder="Enter Mobile No." required><br><br>

        <label>Email :</label>
        <input type="email" name="mail" id="mail" placeholder="abc@gmail.com" class="textbox"><br><br>

        <label>Driver joining date :</label>
        <input type="date" name="djd" class="textbox" placeholder="Enter joining date" required><br><br>

        <label>License-No :</label>
        <input type="tel" name="lno" class="textbox" placeholder="Enter License-No" required><br><br>

        <label>License end date :</label>
        <input type="date" name="led" class="textbox" required><br><br>

        <label>Year of experience :</label>
        <input type="number" name="yoe" class="textbox" placeholder="Enter year of experience" required><br><br>

        <input type="reset" value="Reset" class="sub">
        <input type="submit" value="Join" class="sub">
    </form>
</body>
<script>
    function validate(){
        var text = document.getElementById('mail').value;
        var number = document.getElementById('num').value;
        var regx= /^([a-z 0-9\.-]+)@([a-z0-9-]+).([a-z]{2,8})(.[a-z]{2,8})?$/;
        var regx2 = /^[7-9]\d{9}$/;

        if(!regx.test(text))
        {
            alert("Invalid Gmail");
            return false;
        }
        if(!regx2.test(number))
        {
            alert("Invalid Phone Number");
            return false;
        }

        alert("Driver added sucessfully");
        return true;
     }
</script>
</html>